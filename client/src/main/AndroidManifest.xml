<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"/>

    <application
        android:allowBackup="true"
        android:process="com.kaelesty.client"
        android:name="com.kaelesty.client.system.ModifiedApplication"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ntitestchrome_scaner"
        tools:targetApi="31">
        <service
            android:name="com.kaelesty.client.presentation.main.ClientService"
            android:enabled="true"
            android:foregroundServiceType="dataSync"
            android:exported="true"/>
        <activity
            android:name="com.kaelesty.client.presentation.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Ntitestchrome_scaner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>